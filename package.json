{
  "name": "course-management-system",
  "version": "1.0.0",
  "description": "A web application for course management",
  "main": "server.js",
  "repository": "git@github.com:efalayi/course-management-system.git",
  "author": "Esther Falayi <esther.falayi@andela.com>",
  "license": "MIT",
  "scripts": {
    "build:server": "babel-node tools/build.js",
    "prebuild": "rimraf build && mkdir build",
    "build": "yarn run build:server",
    "prestart": "yarn run build",
    "start": "node server/server.js",
    "start:dev": "nodemon",
    "lint": "./node_modules/.bin/eslint './**/*.js'",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "client:test": "jest --config jest.config.js",
    "server:test": "./node_modules/.bin/nyc ./node_modules/.bin/mocha --opts ./mocha.opts",
    "test": "yarn run server:test && yarn run coverage"
  },
  "dependencies": {
    "dotenv": "^6.2.0",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "chai": "^4.2.0",
    "chalk": "2.4.0",
    "chance": "^1.0.18",
    "coveralls": "^3.0.2",
    "eslint": "^5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "nodemon": "^1.18.8",
    "nyc": "^13.1.0",
    "rosie": "^2.0.1",
    "sinon": "^7.2.2",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  }
}
